<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/writeUrl_image"
        android:background="@mipmap/url" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        android:id="@+id/writeUrl_btns" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www."
            android:id="@+id/writeUrl_btnwww"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".com"
            android:id="@+id/wirteUrl_com"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".cn"
            android:id="@+id/writeUrl_cn"/>

    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter url here..."
        android:gravity="center"
        android:id="@+id/writeUrl_etUrl"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/writeUrl_btnSubmit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>